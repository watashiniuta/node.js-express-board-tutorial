<%- include("../include/header.ejs") -%> 

<!-- Body -->
<main>
  <div class="container">
    <h2>내 게시글 수정</h2>

    <div class="d-flex justify-content-md-between mb-3">
      <p>작성일 : <%= new Date(new Date(result.created_at).getTime() + 9*60*60*1000).toISOString().slice(0,19).replace('T',' ') %></p>
      <p>게시글 번호 : <%= result.id %></p>
    </div>
    
    <form action="/myboard/<%= result.id %>?_method=PUT" method="POST" class="create-form">
      <input type="hidden" name="id" value="<%= result.id %>">

      <div class="form-group">
        <label for="title">제목</label>
        <input type="text" id="title" name="title" value="<%= result.title %>" required>
      </div>

      <div class="form-group">
        <label for="content">내용</label>
        <textarea id="content" name="description" rows="10" wrap="hard" required><%= result.description %></textarea>
      </div>

      <button type="submit" class="create-button">작성하기</button>
    </form>
  </div>
</main>

<%- include("../include/footer.ejs") -%>
