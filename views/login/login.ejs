<%- include("../include/header.ejs") -%> 

  <!-- Body -->
  <main>
    <div class="container">

      <div class="container">
        <h3>로그인</h3>
        <form action="/login" method="POST" class="login-form">
          <div>
            <label for="userID">아이디</label>
            <input type="text" id="userID" name="userID" placeholder="userID" required />
          </div>
          <div>
            <label for="password">비밀번호</label>
            <input type="password" id="password" name="password" placeholder="password" required />
            <label style="margin-top: 7px; font-size: 14px;">
              <input type="checkbox" name="isKeepLogin" style="width: 15px;"/> 로그인 상태 유지
            </label>
          </div>
          <div style="margin-top: 20px;">
            <button type="submit" class="base">로그인</button>
          </div>
          <div style="display: flex; justify-content: space-between;">              
            <a href="/login/register">회원가입</a> | <a href="/login/findID">아이디 찾기</a> | <a href="/login/findPassword">비밀번호 찾기</a>
          </div>
          <% if (loginFailed) { %>
              <h4>로그인 실패...</h4>
          <% } %>
        </form>
      </div>

    </div>
  </main>

<%- include("../include/footer.ejs") -%>